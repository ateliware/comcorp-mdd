<div id="requirements_index">
	<div class="page_header">
		<h1>MDWA Requirements</h1>
	</div>

	<div class="inside">	

		<% if @requirements.count > 0 %>
			<table class="list">
				<tr>
					<th>Requirement title</th>
					<th>Description</th>
					<th>Non-functional concerns</th>
					<th>Entities</th>
					<th>Users</th>
				</tr>
				<% @requirements.each do |requirement| %>
				<tr>
					<td><%= requirement.summary %></td>
					<td><%= requirement.description %></td>
					<td><%= requirement.non_functional_description %></td>
					<td><%= requirement.entities.join ', ' %></td>
					<td><%= requirement.users.join ', ' %></td>
				</tr>
				<% end %>
			</table>
		<% else %>
			<p>No requirements specified.</p>
		<% end %>
	
	</div>
	
</div>
