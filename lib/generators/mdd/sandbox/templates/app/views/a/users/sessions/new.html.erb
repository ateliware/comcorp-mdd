<div class="new_session">

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="field">
	  	<%= f.label :email, t('login.email_label') %>
	  	<%= f.email_field :email %>
	  </div>
	
	  <div class="field">
	  	<%= f.label :password, t('login.password_label') %>
	  	<%= f.password_field :password %>
	  </div>
	
	  <div class="actions">
	  	<%= f.submit t('login.login_button_label'), :class => :button %>
	  </div>
	<% end %>
			
</div>
